@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<center><h1>REGISTRO</h1></center>

<div class="row" align="center">
    <div >
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" style=" width:30%; border-radius: 8%;">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" style="width:95%" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div><br><br>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" style="width:95%" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div><br><br>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" style="width:95%" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div><br><br>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registrar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
 