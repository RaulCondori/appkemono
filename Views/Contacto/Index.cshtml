@model appcomics.Models.Contacto

@{
    ViewData["Title"] = "Contacto";
}


<div class="text-center">
<br>
<center>
    <form asp-controller="Contacto" asp-action="Create" style="background-color:rgb(172, 105, 166); width:30%; border-radius: 8%;">
        <br>
        <label asp-for="Name" class="form-label">Nombre:</label><br><br>
        <input asp-for="Name" class="form-control form-control-sm" type="text" placeholder="Ingrese su nombre" aria-label=".form-control-sm" style="width:65%"/>
        <br>
        <label asp-for="Email" class="control-label">Correo:</label><br><br>
        <input asp-for="Email" class="form-control" placeholder="Ingrese su correo" aria-label=".form-control-sm" style="width:65%"/>
        <br>
        <label asp-for="Subject" class="control-label">Asunto:</label><br><br>
        <input asp-for="Subject" class="form-control" placeholder="Ingrese el asunto" aria-label=".form-control-sm" style="width:65%" />
        <br>
        <label asp-for="Comment" class="control-label">Comentario:</label><br><br>
        <input asp-for="Comment" class="form-control" placeholder="Ingrese el comentario" aria-label=".form-control-sm" style="width:65%"/>
        <br>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Enviar</button> 
            <br><br>
        </div>              
    </form>
</center>

    <h1>@ViewData["Message"]</h1>
    <div>
    </div>
</div> 